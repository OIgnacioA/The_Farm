pipeline {
    agent any
    stages {
        stage('Clonar c√≥digo') {
            steps {
                git 'https://github.com/tu-usuario/tu-repositorio.git'
            }
        }
        stage('Construir Docker') {
            steps {
                script {
                    docker.build('app-nodejs')
                }
            }
        }
        stage('Ejecutar en Docker') {
            steps {
                script {
                    docker.image('app-nodejs').run('-p 3000:3000')
                }
            }
        }
    }
}
